<h1>Add a New Movie</h1>


<%= form_tag "/movies" do %>
  <p>
    <%= label_tag :title, "Movie Title" %>
    <%= text_field_tag :title, "", size: 80, placeholder: "Enter a movie title here..." %>
  </p>
  <p>
    <%= label_tag :year, "Year" %>
    <%= text_field_tag :year, "2013", size: 4 %>
  </p>
  <%= submit_tag "Submit new movie" %>

<% end %>
