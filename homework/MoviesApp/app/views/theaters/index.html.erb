<h1>Theaters</h1>

<p><%= link_to 'Add a New Theater', "/theaters/new" %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Functions</th>
    </tr>
  </thead>
  <tbody>
  <% @theaters.each do |theater| %>
    <tr>
        <td><%= link_to theater.name, "/theaters/#{theater.id}" %></td>
        <td><%= theater.address %></td>
      <td><%= link_to 'Map', "/theaters/#{theater.id}" %>
      <%= link_to 'Edit', "/theaters/#{theater.id}/edit" %>
      <%= link_to 'Delete', "/theaters/#{theater.id}", method: 'delete', data: { confirm: "Do you really want to delete this theater?" } %></td>
    </tr>
  <% end %>
  </body>
</table>

